{
  "manifest_version": 2,
  "name": "Speed Dial Bitcurex Chart",
  "description": "A chart and ticker for pln.bitcurex.com",
  "version": "1.0",
  "background": {"page": "src/sd.html"},
  "options_page": "src/options.html",
  "icons": { "16": "img/icon_16.png",
             "48": "img/icon_48.png",
            "128": "img/icon_128.png" },

  "permissions": ["https://pln.bitcurex.com/", "https://btc-e.com/api/"],
  "speeddial": {
    "url": "http://bitcoinity.org/markets/bitcurex/PLN",
    "title": "Bitcoinity"
  }
}